<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/user_profile_last_watched_poster"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/placeholder_poster"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/user_profile_last_watched_poster">

        <TextView
            android:id="@+id/user_profile_last_watched_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/user_profile_last_watched_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:id="@+id/user_profile_last_watched_transcode_decision"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

    </LinearLayout>

</RelativeLayout>