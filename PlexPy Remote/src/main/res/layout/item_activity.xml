<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/activity_card_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        card_view:cardBackgroundColor="#333333"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joanzapata.iconify.widget.IconTextView
                android:id="@+id/activity_card_media_type"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/activity_card_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true" />

            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@id/activity_card_image"
                android:progressBackgroundTint="#00000000"
                style="?android:attr/progressBarStyleHorizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/activity_card_image"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/activity_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Media Title"
                    android:textStyle="bold"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_card_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Episode Title"
                    android:layout_below="@id/activity_card_title"
                    style="@style/TextAppearance.AppCompat.Subhead"/>

                <TextView
                    android:id="@+id/activity_card_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/activity_card_subtitle"
                    android:layout_toRightOf="@id/activity_card_subtitle"
                    android:text=""
                    android:textSize="8sp"
                    android:layout_margin="5dp"
                    style="@style/TextAppearance.AppCompat"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/activity_card_state_icon"
                            android:textSize="10sp"
                            android:layout_width="12sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/activity_card_state_text"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/activity_card_user_icon"
                            android:textSize="10sp"
                            android:layout_width="12sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/activity_card_user_text"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.joanzapata.iconify.widget.IconTextView
                            android:id="@+id/activity_card_decision_icon"
                            android:textSize="10sp"
                            android:layout_width="12sp"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/activity_card_decision_text"
                            android:textSize="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <com.joanzapata.iconify.widget.IconTextView
                    android:text="{fa-info-circle}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="30dp"
                    android:layout_margin="15dp"/>

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>