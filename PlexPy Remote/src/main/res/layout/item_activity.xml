<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        app:cardBackgroundColor="#333333">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:id="@+id/activity_card_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Silicon Valley - Server Space Lorem Ipsum More Text Server Space Lorem Ipsum More Text"
                    style="@style/Base.TextAppearance.AppCompat.Title"
                    android:textSize="12dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/activity_card_season_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@id/activity_card_title"
                    android:textSize="8dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/activity_card_image"
                    android:layout_width="fill_parent"
                    android:layout_height="210dp"
                    android:scaleType="centerCrop" />

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="fill_parent"
                    android:layout_height="4dp"
                    android:layout_alignBottom="@id/activity_card_image"
                    style="?android:attr/progressBarStyleHorizontal" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="User"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="State"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Player"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="4dp">

                            <TextView
                                android:id="@+id/activity_card_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />
                            <TextView
                                android:id="@+id/activity_card_status"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />
                            <TextView
                                android:id="@+id/activity_card_player"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/activity_card_stream_label"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Stream"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                            <TextView
                                android:id="@+id/activity_card_video_label"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Video"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                            <TextView
                                android:id="@+id/activity_card_audio_label"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:text="Audio"
                                android:textSize="7dp"
                                android:textAlignment="textEnd" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="4dp">


                            <TextView
                                android:id="@+id/activity_card_stream"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />
                            <TextView
                                android:id="@+id/activity_card_video"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />
                            <TextView
                                android:id="@+id/activity_card_audio"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="7dp"
                                android:textColor="#FFFFFF" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
        




    </android.support.v7.widget.CardView>

</LinearLayout>