<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCardBackground"
    android:orientation="vertical"
    tools:context="com.williamcomartin.plexpyremote.StreamInfoFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_stream_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">
        <com.joanzapata.iconify.widget.IconTextView
            style="@style/Headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="{fa-info} Stream Details"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/activity_stream_image"
        android:layout_below="@+id/activity_stream_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/activity_stream_thumb"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:padding="0dp"
            android:src="@drawable/img"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_alignParentStart="true" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/activity_stream_thumb"
            android:background="@drawable/activity_stream_gradient"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_stream_thumb"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:text="ETA: 19:18:19"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/activity_stream_thumb"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:textSize="10sp"
            android:text="4:06/42:22"/>

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignBottom="@+id/activity_stream_thumb"
            android:progress="75"
            android:secondaryProgress="89"
            android:progressBackgroundTint="#00000000"
            android:secondaryProgressTint="@color/colorTranscodeBufferBar"
            android:secondaryProgressTintMode="src_over"
            style="?android:attr/progressBarStyleHorizontal" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_stream_image"
        android:paddingLeft="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.joanzapata.iconify.widget.IconTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="5dp"
                style="@style/Headline"
                android:text="{fa-play}"/>

            <TextView
                android:id="@+id/activity_stream_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Supergirl"
                style="@style/Headline"/>

            <TextView
                android:id="@+id/activity_stream_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_stream_title"
                android:text="Episode Name"
                style="@style/Subhead"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_stream_subtitle"
                android:text="S1 - E1"
                android:textSize="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <ImageView
                android:id="@+id/activity_stream_user_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:src="@drawable/gravatar_default_circle"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_stream_user_avatar"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/activity_stream_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextHeading"
                    android:text="William Comartin"/>

                <TextView
                    android:id="@+id/activity_stream_user_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextHeading"
                    android:text="IP: 127.0.0.1"/>

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Player"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorTextHeading"
                android:text="Plex Web (Chrome)"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Stream"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorTextHeading"
                android:text="Transcoding (Speed: 4.5) (Throttled)"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Video"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorTextHeading"
                android:text="Transcoding (h264) (1280 x 718)"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Audio"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorTextHeading"
                android:text="Direct Stream (aac) (6 ch)"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
